import java.awt.*;
import java.awt.event.*;
import javax.swing.*;

public class demo extends JFrame  implements ActionListener{
	JButton jb,jb1;//按钮
	 JLabel jl;
	 JTextField jt;
	 public demo() {
		 setTitle("");
		 setSize(300,250);
		 setLocationRelativeTo(null);//设置窗口居中
		 setLayout(new BorderLayout());
		 JPanel jp = new JPanel();
		 jp.setLayout(new GridLayout(3, 1));
		 jp.setBackground(Color.BLUE);
		 
		 
		

		 JPanel jp1 = new JPanel();
		 jp1.setBackground(Color.CYAN);
		 jl=new JLabel("猜一猜生成随机数的大小!");
		 jp1.add(jl);
		 jp.add(jp1);
		 
		 
		 
		 JPanel jp2 = new JPanel();
		 jp2.setBackground(Color.CYAN);
		 jt=new JTextField(12);
		 jp2.add(jt);
		 jp.add(jp2);
		 
		 
		 JPanel jp3 = new JPanel();
		 jp3.setBackground(Color.CYAN);
		 jb=new JButton("确定");
		 jb.setBackground(Color.WHITE);
		 jb.addActionListener(this);// 添加动作响应器
		
		 jp3.add(jb);
		 jp.add(jp3);
		 
		
		 
		 add(jp);
		 
	}


	public void actionPerformed(ActionEvent e) {
		 String cmd = e.getActionCommand();//确定按钮的名字
		 if (cmd.equals("确定")) {      //equals  是等于的意思	 
			 String id = jt.getText();// 取得用户名
			 int s;
			 s=Integer.parseInt(id);
			 int x=(int)(Math.random()*3);
			 if(x==s) {
				 setVisible(false);// 本窗口隐藏,
	             new demo2().setVisible(true);// 新窗口显示
	             dispose();//本窗口销毁,释放内存资源
			 }
			 else{
				 setVisible(false);// 本窗口隐藏,
	             new demo3().setVisible(true);// 新窗口显示
	             dispose();//本窗口销毁,释放内存资源
			 }
			 
		 }
		
		
	}
     public static void main(String[] args) {
	      new demo().setVisible(true);//创建登录窗口,并可见
	     
	}
}
