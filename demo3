import java.awt.*;
import java.awt.event.*;
import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

import javax.swing.*;
public class demo3 extends JFrame implements ActionListener{
      JButton jb,jb1;
      JLabel  jl;
      public demo3() {
    	  setTitle("很抱歉！");
 		 setSize(300,250);
 		 setLocationRelativeTo(null);//设置窗口居中
 		 setLayout(new BorderLayout());
 		 JPanel jp = new JPanel();
 		 jp.setLayout(new GridLayout(2, 1));
 		 jp.setBackground(Color.BLUE);
 		 
 		 
 		 JPanel jp1 = new JPanel();
 		 jp1.setBackground(Color.CYAN);
 		 jl = new JLabel("很抱歉！猜错了");
 		 jp1.add(jl);
 		 jp.add(jp1);
 		 
 		 
 		 
 		 JPanel jp2 = new JPanel();
 		jp2.setBackground(Color.CYAN);
 	/*	 jb=new JButton("继续");
 		 getRootPane().setDefaultButton(jb);
 		 jb.setBackground(Color.white);
 		 jb.addActionListener(this);*/
 		jb1=new JButton("退出");
 		getRootPane().setDefaultButton(jb1);
		 jb1.setBackground(Color.white);
		 jb1.addActionListener(this);
	//	 jp2.add(jb);
 		 jp2.add(jb1);
 		 jp.add(jp2);
 		 
 		 
 		 
 		 add(jp);
 		 
    	  
      }

	public void actionPerformed(ActionEvent e) {
		 String cmd = e.getActionCommand();//确定按钮的名字
		 if (cmd.equals("继续")) {      //equals  是等于的意思
			   setVisible(false);// 本窗口隐藏,
			   new demo().setVisible(true);// 新窗口显示
               dispose();//本窗口销毁,释放内存资源
		 }
		 if (cmd.equals("退出")) {      //equals  是等于的意思
			 File f = new File("d:\\test.txt");
		        FileWriter fw = null;
		        try {
					fw = new FileWriter(f);
				} catch (IOException e1) {
					e1.printStackTrace();
				}
		        try {
					fw.write("");
				} catch (IOException e1) {
					e1.printStackTrace();
				}
				 try {
					fw.close();
				} catch (IOException e1) {
					e1.printStackTrace();
				}
			   setVisible(false);// 本窗口隐藏,
			 //  new demo().setVisible(true);// 新窗口显示
             dispose();//本窗口销毁,释放内存资源
		 }
		
	}
  
	public static void main(String[] args) {
        new demo3().setVisible(true);//创建登录窗口,并可见
    }
}
