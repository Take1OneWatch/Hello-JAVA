import javax.swing.*;
import java.awt.*;
public class ExGui {

	private JFrame frame;
	private JButton b1;
	private JButton b2;
	private JButton b3;   //必须对要加入的按钮进行定义和封装！
	
	public static void main(String[] args) {
		ExGui that = new ExGui();
        that.go();       //必须采用调用的形式创建按钮！
		
	}
	public void go() {
		frame = new JFrame("");   //括号内可以不填写任何内容
		Container s = frame.getContentPane(); //定义一个内容窗格
		s.setLayout(new FlowLayout(FlowLayout.CENTER));
		//创建一个FlowLayout型的布局管理器取代默认的BorderLayout布局管理器
		b1 = new JButton("press me ");   
		b2 = new JButton("Dpn't press me ");//JButton其实就是创造一个按钮！
		b3 = new JButton("Silly B ");
		s.add(b1);//将b1放置到内容窗格里面去！
		s.add(b2);
		s.add(b3);
		frame.setSize(200,100);
		frame.setVisible(true); //简单来说就是用于输出的语句！
	}

}

