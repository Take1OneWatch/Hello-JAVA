    	System.out.println("不满意1~3 ; 比较满意4~6 ; 满意7~9 ; 非常满意10");
    	try{
    		for(int j =1 ;j<=3;j++) {
    		Scanner x2= new Scanner(System.in);
    		   int z1 =x2.nextInt();
    		   if(z1>=1&&z1<=10) {
    				  System.out.println("感谢您给出的宝贵评价！");
    				 System.out.println("期待您的再次使用，再见！"); break;
    				 }
    		   else {
    			    	  System.out.println("系统错误，请输入正确的评分");
    			    	  if(j==3) {
    			    		 System.out.println("系统错误，已自动退出程序！"); 
    			    		break;   }
    			    	  }
                	} 
    		}
    	catch(InputMismatchException e)
    	{
    		e.printStackTrace();
    		System.out.println("你应该输入正数！");
    		System.out.println("由于程序错误已经退出程序！");
    	}   break;
		}   
	if(s!=1&&s!=2) 
       {System.out.println("系统错误，请重新输入正确的序号");
       if(i==3) {
       	System.out.println("输入错误超过三次已自动退出程序！"); }
       
       }   
     }
}
	
