public class inside {
	    public void test() {  //货车
    	   System.out.println("1.松花江  400元/天  载货：4吨");
    	   System.out.println("2.依维柯  800元/天  载货：20吨");
    	 for(int m =1;m<=3;m++)
    	   {
    		   Scanner s1= new Scanner(System.in);
    	   int s =s1.nextInt();
    	   { 
    	       if(s==1) {
    			   int money1 =400 ;
    			   System.out.println("请输入要租用的数量！");
      			 Scanner l1= new Scanner(System.in);
      			 int l = l1.nextInt();
    			   System.out.println("请输入想要租用的天数：");
    			   Scanner d1= new Scanner(System.in);
    	    	   int d =d1.nextInt();
    	    	   money1 = money1*d*l;
    	    	   System.out.println("账单：");
    	    	   System.out.println("*********************************");
    	    	   System.out.println("松花江  400元/天  载货：4吨");
    	    	   System.out.println("数量："+l);
    	    	   System.out.println("租用天数："+d);
    	    	   System.out.println("总费用："+money1);
    	    	   System.out.println("*********************************");
    	    	   System.out.println("请核对账单后确定是否租用！");
    	    	   System.out.println("确定请按：1 ; 取消请按：2 ");
    	    	   for(int i=1;i<=3;i++)
    	    	 {  Scanner x1= new Scanner(System.in);
    	    	   int x =x1.nextInt();
    	    	   if(x==1) {
    	    		   System.out.println("租用成功！祝您路途愉快");
    	    		   break;
    	    	   }
    	    	   if(x==2) {
    	    		   System.out.println("已取消支付订单，期待您的下次使用！");
    	    		   break;
    	    	   }
    	    	   if(x!=1&&x!=2) {
    	    		   System.out.println("系统错误，请输入正确的序号！");
    	    		   if(i==3) {
    	    			   System.out.println("输入错误超过三次已自动退出程序！");break;
    	    		   }
    	    	   }
    		   }break;
    		} 
    	 }	   
    		   
    		   
    		   
    		   {  if(s==2) {
    			   int money1 =800 ;
    			   System.out.println("请输入要租用的数量！");
      			 Scanner l1= new Scanner(System.in);
      			 int l = l1.nextInt();
    			   System.out.println("请输入想要租用的天数：");
    			   Scanner d1= new Scanner(System.in);
    	    	   int d =d1.nextInt();
    	    	   money1 = money1*d*l;
    	    	   System.out.println("账单：");
    	    	   System.out.println("*********************************");
    	    	   System.out.println("依维柯  800元/天  载货：20吨");
    	    	   System.out.println("租用数量："+l);
    	    	   System.out.println("租用天数："+d);
    	    	   System.out.println("总费用："+money1);
    	    	   System.out.println("*********************************");
    	    	   System.out.println("请核对账单后确定是否租用！");
      	    	  System.out.println("确定请按：1 ; 取消请按：2 ");
      	    	  for(int i=1;i<=3;i++)
     	    	 {  Scanner x1= new Scanner(System.in);
     	    	   int x =x1.nextInt();
     	    	   if(x==1) {
     	    		   System.out.println("租用成功！祝您路途愉快");
     	    		   break;
     	    	   }
     	    	   if(x==2) {
     	    		   System.out.println("已取消支付订单，期待您的下次使用！");
     	    		   break;
     	    	   }
     	    	   if(x!=1&&x!=2) {
     	    		   System.out.println("系统错误，请输入正确的序号！");
     	    		   if(i==3) {
     	    			   System.out.println("输入错误超过三次已自动退出程序！");
     	    		   }
     	    	   }
     		   }break;
    		 }
    		   }
    		   
    		   
    		   
    		   
    		   
    		   {  if(s!=1&&s!=2) {
    			  System.out.println("系统错误，请输入正确的序号！");
	    		   if(m==3) {
	    			   System.out.println("输入错误超过三次已自动退出程序！");
