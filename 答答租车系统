	    		   it.user3();break; }
     	    	   }
     	    	   if(x==2) {
     	    		  System.out.println("我们诚挚邀请您为本次服务打分：");
     	    	    	System.out.println("不满意1~3 ; 比较满意4~6 ; 满意7~9 ; 非常满意10");
     	    	    	try{
     	    	    		for(int j =1 ;j<=3;j++) {
     	    	    		Scanner x2= new Scanner(System.in);
     	    	    		   int z1 =x2.nextInt();
     	    	    		   if(z1>=1&&z1<=10) {
     	    	    				  System.out.println("感谢您给出的宝贵评价！");
     	    	    				 System.out.println("期待您的再次使用，再见！"); break;
     	    	    				 }
     	    	    		   else {
     	    	    			    	  System.out.println("系统错误，请输入正确的评分");
     	    	    			    	  if(j==3) {
     	    	    			    		 System.out.println("系统错误，已自动退出程序！"); 
     	    	    			    		break;   }
     	    	    			    	  }
     	    	                	} 
     	    	    		}
     	    	    	catch(InputMismatchException e)
     	    	    	{
     	    	    		e.printStackTrace();
     	    	    		System.out.println("你应该输入正数！");
     	    	    		System.out.println("由于程序错误已经退出程序！");
     	    	    	}   break;
     	    	   }
     	    	   
     	    	  if(x==3) {
     	    		 Renew q = new Renew();
     	   		      q.test2();break;
      	    	   }
    
     	    	   if(x!=1&&x!=2&&x!=3) {
     	    		   System.out.println("系统错误，请输入正确的序号！");
     	    		   if(i==3) {
     	    			   System.out.println("输入错误超过三次已自动退出程序！");break;
     	    		   }
     	    	   }
     		   }break;
    	    }
    		   
    		   if(s==3){
    			   System.out.println("您好！欢迎来到租车界面！");
    			   System.out.println("我们有货车，客车，以及皮卡供您选择");
  	    		 System.out.println("选择货车请按: 1 ");
  	    		 System.out.println("选择客车请按: 2 ");
  	    		 System.out.println("选择皮卡请按: 3 ");
  	    		 System.out.println("退出请按： 4   ");

       	    		 User a =new User();
       	    		 a.user1();
       	    		 break;
    		   
    	  }
    	   
    	   
    	   {  if(s!=1&&s!=2&&s!=3) {
 			  System.out.println("系统错误，请输入正确的序号！");
	    		   if(m==3) {
	    			   System.out.println("输入错误超过三次已自动退出程序！");
	    		   }
 		  }
 		}   
    	   }   }

     }  }
     
     
     
     
     
     
