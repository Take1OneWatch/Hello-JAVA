package com.imooc;
import java.util.Scanner;
public class User {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		 System.out.println("欢迎来到答答租车系统！");
    	 System.out.println("请问您是否需要租车：1.是 ; 2.否");
    	for(int i = 1 ;i<=3;i++) {
    		 Scanner input = new Scanner(System.in);
        	 int s =input.nextInt();
    	 if(s==1) {
    		 System.out.println("您好！欢迎来到租车界面！");
    		 System.out.println("我们有货车，客车，以及皮卡供您选择");
    		 System.out.println("选择货车请按 1 ");
    		 System.out.println("选择客车请按 2 ");
    		 System.out.println("选择皮卡请按 3 ");
    		 Scanner input1 = new Scanner(System.in);
    		 int d = input1.nextInt();
    		 {
    			 if(d==1) {
    				 System.out.println("请输入想要选择的车型！");
    				 inside s1 =new inside();
    				 s1.test(); break;}
    			 if(d==2) {
    				 System.out.println("请输入想要选择的车型！");
    				 inside s2 =new inside();
    				 s2.test1();break;}    			 
    			 if(d==3) {
    				 System.out.println("请输入想要选择的车型！");
    				 inside s3 =new inside();
    				 s3.test2();break;}
    			
    			 if(d!=1&&d!=2&&d!=3) {
    				 System.out.println("系统错误，请重新输入正确的序号");
    			 }
    	      }
	}if(s==2) 
		{System.out.println("期待您的下次使用，再见");
		break;}
	if(s!=1&&s!=2) 
        {System.out.println("系统错误，请重新输入正确的序号");
        if(i==3) {
        	System.out.println("输入错误超过三次已自动退出程序！"); }
        }   
      } 
	}
}
